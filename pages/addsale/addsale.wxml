<!--pages/addsale/addsale.wxml-->
<view class="page-body">

<view class="page-section">
    <label class="weui-cells__title">客户:</label>
    <input class="input_user" bindfocus ='input_user' value = '{{username}}' placeholder="用户名称"/>
  </view>
  <view class="page-section">
    <label class="weui-cells__title">名称:</label>
    <input class="input_name" bindfocus ='input_name' value = '{{name}}' placeholder="货品名称"/>
  </view>
  <view class="page-section">
    <label class="weui-cells__title">数量(单位):</label>
    <input class="input_number" bindinput='input_number' maxlength="10" type="number" placeholder="最大小于一万" />
  </view>
  <view class="page-section">
    <label class="weui-cells__title">售价(每单位):</label>
    <input class="input_price" bindinput='input_price' maxlength="10" type="number" placeholder="最大小于一万" />
  </view>
</view>
<view class = 'buttons'>
  <button class = 'confirm' bindtap='save'>保存</button>
  <button class = 'confirm' bindtap='confirm'>提交</button>
</view>
